<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:with field='res' type='me.deal.client.resources.Resources'/>
	
	<ui:style>
		.important {
			font-weight: bold;
		}
		.scrollable {
                height: 100%;
                overflow: auto;
        }
        .maxheight {
				height: 100%;
		}
	</ui:style>
	<g:HTMLPanel styleName='{style.maxheight}'>
		<g:Image resource="{res.loadingSpinner}" ui:field="loadingSpinnerImage" />
		<g:ScrollPanel ui:field="listWidgetScrollPanel">
			<g:VerticalPanel ui:field="listItemContainer" styleName='{style.scrollable}'></g:VerticalPanel>
		</g:ScrollPanel>
	</g:HTMLPanel>
</ui:UiBinder>