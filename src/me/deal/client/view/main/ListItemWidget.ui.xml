<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		<!-- TODO: Add styling -->
		.important {
			font-weight: bold;
		}
	</ui:style>
	
	<g:HorizontalPanel>
		<g:VerticalPanel>
			<g:Button ui:field="formatMapButton"></g:Button>
			<g:Image ui:field="dealImage"></g:Image>
			<g:Label ui:field="dealTitle"></g:Label>
			<g:Label ui:field="dealSubtitle"></g:Label>
		</g:VerticalPanel>
		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:Image ui:field="avgRating"></g:Image>
				<g:Anchor ui:field="numReviews"></g:Anchor>
			</g:HorizontalPanel>
			<g:VerticalPanel>
				<g:Label ui:field="businessName"></g:Label>
				<g:Label ui:field="addressLine1"></g:Label>
				<g:HorizontalPanel>
					<g:Label ui:field="addressLine2"></g:Label>
					<g:Button ui:field="getDirectionsButton"></g:Button>
				</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:HorizontalPanel>
				<g:VerticalPanel>
					<g:Label>DEAL PRICE:</g:Label>
					<g:Label ui:field="dealPrice"></g:Label>
				</g:VerticalPanel>
				<g:VerticalPanel>
					<g:Label>DISCOUNT:</g:Label>
					<g:Label ui:field="discountPercentage"></g:Label>
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<g:HorizontalPanel>
				<g:Label ui:field="numDaysLeft"></g:Label>
				<g:Label> left on </g:Label>
				<g:Label ui:field="dealSource"></g:Label>
			</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder> 