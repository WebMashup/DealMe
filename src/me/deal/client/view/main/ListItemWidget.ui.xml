<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	 xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		<!-- TODO: Add styling -->
		.important {
			font-weight: bold;
		}
		.gwt-Label {
			font-size:24px;
			color:blue;
		}		
		
	</ui:style>	
	<g:HTMLPanel>

	<div class="itemContainer">
	
		<div class="leftPanel">
			<div class="leftPic">
				<g:Image ui:field="dealImage"></g:Image>
			</div>
			<div class="leftText">
				<g:Label ui:field="dealTitle" addStyleNames="titleStyle" ></g:Label>
			</div>
		</div>
		<div class="rightPanel">		
			<g:VerticalPanel>					
				<g:HorizontalPanel>
					<g:Image ui:field="avgRating"></g:Image>
					<g:Anchor ui:field="numReviews"></g:Anchor> 
					<g:Label>Yelp Ratings:</g:Label>
					<g:Image ui:field="avgYelpRating"></g:Image>
				</g:HorizontalPanel>
				<g:VerticalPanel>
					<g:Label ui:field="dealSubtitle"></g:Label>
					<g:Label ui:field="businessName"></g:Label>
					<g:Label ui:field="addressLine1"></g:Label>
					<g:Label ui:field="addressLine2"></g:Label>
					<g:Button ui:field="getDirectionsButton" addStyleNames="dirButton">Get Directions</g:Button>			
				</g:VerticalPanel>
				<g:HorizontalPanel>
					<g:VerticalPanel>
						<g:Label addStyleNames="boldText">DEAL PRICE:</g:Label>
						<g:Label ui:field="dealPrice" addStyleNames="boldNumbers"></g:Label>
					</g:VerticalPanel>				
					<g:VerticalPanel>
						<g:Label addStyleNames="boldText">DISCOUNT:</g:Label>
						<g:Label ui:field="discountPercentage" addStyleNames="boldNumbers"></g:Label>
					</g:VerticalPanel>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label ui:field="numDaysLeft" addStyleNames="boldText2"></g:Label>
					<g:Label ui:field="daysText" addStyleNames="boldText2"></g:Label>
					<g:Label ui:field="dealSource" addStyleNames="boldText2"></g:Label>
				</g:HorizontalPanel>
			</g:VerticalPanel>			
		</div>
	
	</div>
	</g:HTMLPanel>
</ui:UiBinder> 