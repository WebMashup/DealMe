<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.addressPadding {
			padding-left: 2px;

		}
	</ui:style>
	<g:HorizontalPanel>
		<g:Label ui:field="addressLine1" styleName='{style.addressPadding}'></g:Label>
		<g:Label ui:field="addressLine2" styleName='{style.addressPadding}'></g:Label>
		<g:Button ui:field="changeAddressButton" styleName='{style.addressPadding}'>Change Address</g:Button>
	</g:HorizontalPanel>
</ui:UiBinder> 