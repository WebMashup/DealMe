<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:header="urn:import:me.deal.client.view.header" xmlns:menubar="urn:import:me.deal.client.view.menubar"
	xmlns:main="urn:import:me.deal.client.view.main">

	<ui:style>
		.important {
			font-weight: bold;
		}
		.bottomdivider {
		margin-top: 5px;
		margin-bottom: 10px;
        border-bottom: 1px solid rgb(221,221,221);
		}
		.rightdivider {
        border-right: 1px solid rgb(221,221,221);
		}
		.scrollable {
                height: 100%;
                overflow: auto;
        }
        .maxheight {
				height: 100%;
		}
	</ui:style>
	<g:HTMLPanel>
		<menubar:MenuWidget ui:field="menuWidget"></menubar:MenuWidget>
		<b:Container>
			<b:Row>
				<b:Column size="12" styleName='{style.bottomdivider}'>
					<b:TabPanel>
						<b:TabPane heading="Filters">
							<menubar:FilterWidget ui:field="filterWidget"></menubar:FilterWidget>
						</b:TabPane>
						<b:TabPane heading="Location">
							<menubar:LocationWidget ui:field="locationWidget"></menubar:LocationWidget>
						</b:TabPane>
					</b:TabPanel>
				</b:Column>
			</b:Row>
			<b:Row>
				<b:Column size="7">
					<!-- <b:Hero>
						<b:Heading size="1">Deals Go Here</b:Heading>
						<b:Paragraph>   Some filler text.</b:Paragraph>
						<b:Paragraph>   More text.</b:Paragraph>
					</b:Hero> -->
					<g:ScrollPanel>
						<main:ListWidget ui:field="listWidget" styleName='{style.maxheight}'></main:ListWidget>
					</g:ScrollPanel>
				</b:Column>
				<b:Column size="5">
					<main:GoogleMapWidget ui:field="googleMapWidget"></main:GoogleMapWidget>
					<!-- <b:Hero>
						<b:Heading size="1">Map Goes Here</b:Heading>
						<b:Paragraph>Some filler text.</b:Paragraph>
						<b:Paragraph>More text.</b:Paragraph>
					</b:Hero> -->
				</b:Column>
			</b:Row>
		</b:Container>
	</g:HTMLPanel>
</ui:UiBinder> 